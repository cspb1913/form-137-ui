# Auth0 Configuration (Production values - replace with your Auth0 tenant)
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api.com/api
AUTH0_BASE_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000
AUTH0_SECRET=a_very_long_secret_value_with_at_least_32_characters_for_jwt_signing_purposes

# Public Auth0 Configuration (exposed to client)
NEXT_PUBLIC_AUTH0_AUDIENCE=https://your-api.com/api

# API Configuration
NEXT_PUBLIC_FORM137_API_URL=http://localhost:8080

# Development Mode Configuration
# Set to 'true' to bypass Auth0 authentication in local development
# Set to 'false' or remove to use real Auth0 authentication
NEXT_PUBLIC_DEV_MODE=true

# Development User Configuration (when DEV_MODE=true)
# Configure the mock user for development
NEXT_PUBLIC_DEV_USER_EMAIL=dev@example.com
NEXT_PUBLIC_DEV_USER_NAME=Development User
NEXT_PUBLIC_DEV_USER_ROLE=Admin  # Options: Admin, Requester

# Backend Development Mode (Spring Boot)
# This should match the backend's auth.enabled configuration
BACKEND_AUTH_ENABLED=false